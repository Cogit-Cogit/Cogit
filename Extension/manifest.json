{
  "name": "코깃코깃 익스텐션",
  "description": "백준 코드 미러링",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.acmicpc.net/submit/*",
        "https://www.acmicpc.net/status?*"
      ],
      "js": [
        "baekjoon.js",
        "baekjoonLanguage.js",
        "sendCode.js",
        "authorize.js"
      ]
    },
    {
      "matches": [
        "https://school.programmers.co.kr/learn/courses/30/lessons/*"
      ],
      "js": [
        "programmers.js",
        "programmersLanguage.js",
        "sendCode.js",
        "authorize.js"
      ]
    },
    {
      "matches": ["https://localhost:3000/*"],
      "js": ["authorize.js"]
    }
  ],
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/pets.png",
      "32": "/images/pets.png",
      "48": "/images/pets.png",
      "128": "/images/pets.png"
    }
  },
  "icons": {
    "16": "/images/cogit.PNG",
    "32": "/images/cogit.PNG",
    "48": "/images/cogit.PNG",
    "128": "/images/cogit.PNG"
  },
  "options_page": "options.html"
}
